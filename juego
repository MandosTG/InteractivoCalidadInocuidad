                            <li>‚úÖ Retiro eficaz de productos</li>
                            <li>‚úÖ Identificaci√≥n r√°pida de problemas</li>
                            <li>‚úÖ Cumplimiento regulatorio</li>
                            <li>‚úÖ Protecci√≥n de marca</li>
                        </ul>
                        <ul class="text-sm text-gray-700 space-y-1">
                            <li>‚úÖ Confianza del consumidor</li>
                            <li>‚úÖ Gesti√≥n de crisis</li>
                            <li>‚úÖ Mejora continua</li>
                            <li>‚úÖ Responsabilidad legal</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Definitions data
        const definitions = {
            'Calidad': 'La calidad se refiere al grado en el que un conjunto de caracter√≠sticas inherentes de un producto o servicio cumple con los requisitos establecidos.',
            'Control de calidad': 'Es el proceso orientado a cumplir con los requisitos de calidad a trav√©s de actividades operativas que garantizan que los productos o servicios cumplan con los criterios establecidos.',
            'Aseguramiento de la calidad': 'Enfoque sistem√°tico para proporcionar confianza de que los requisitos de calidad se cumplir√°n, incluyendo planificaci√≥n, implementaci√≥n y mantenimiento de sistemas.',
            'Inocuidad alimentaria': 'Implica garantizar que los alimentos sean seguros para el consumo humano, sin presentar ning√∫n riesgo para la salud del consumidor.',
            'Sistema de gesti√≥n de la calidad (SGC)': 'Conjunto de pol√≠ticas, procesos y procedimientos utilizados por una organizaci√≥n para asegurar que sus productos cumplan consistentemente con los requisitos.',
            'Mejora continua': 'Enfoque constante y permanente en la optimizaci√≥n de los procesos, productos o servicios para incrementar la satisfacci√≥n del cliente.',
            'Sistema de gesti√≥n de inocuidad': 'Conjunto de elementos interrelacionados que gestionan la inocuidad alimentaria identificando, evaluando y controlando peligros.',
            'Inspecci√≥n': 'Actividad que consiste en medir, examinar y comparar las caracter√≠sticas de un producto con los requisitos especificados.',
            'Verificaci√≥n': 'Evaluaci√≥n objetiva de si un producto, servicio, sistema o proceso cumple con los requisitos especificados mediante pruebas y mediciones.',
            'Alimento apto para consumo': 'Alimento que es seguro para ser consumido por humanos sin causar da√±o, libre de peligros qu√≠micos, f√≠sicos o biol√≥gicos.'
        };

        // Game state variables
        let currentGame = null;
        let memoramaState = { attempts: 0, pairs: 0, flippedCards: [], matchedPairs: [] };
        let matchingState = { score: 0, matches: {} };
        let quizState = { currentQuestion: 0, score: 0, questions: [] };
        let flashcardState = { currentCard: 0 };

        // Modal functions
        function openModal(modalId) {
            document.getElementById(modalId + '-modal').classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeModal(modalId) {
            document.getElementById(modalId + '-modal').classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        function toggleFAQ(faqNumber) {
            const content = document.getElementById(`faq-content-${faqNumber}`);
            const icon = document.getElementById(`faq-icon-${faqNumber}`);
            
            if (content.classList.contains('hidden')) {
                content.classList.remove('hidden');
                icon.style.transform = 'rotate(180deg)';
            } else {
                content.classList.add('hidden');
                icon.style.transform = 'rotate(0deg)';
            }
        }

        // Game management functions
        function showGame(gameType) {
            // Hide all games
            document.querySelectorAll('.game-container').forEach(container => {
                container.classList.add('hidden');
            });
            
            // Show selected game
            document.getElementById(gameType + '-game').classList.remove('hidden');
            currentGame = gameType;
            
            // Initialize game
            switch(gameType) {
                case 'memorama':
                    initMemorama();
                    break;
                case 'matching':
                    initMatching();
                    break;
                case 'quiz':
                    initQuiz();
                    break;
                case 'flashcards':
                    initFlashcards();
                    break;
            }
        }

        // MEMORAMA GAME
        function initMemorama() {
            memoramaState = { attempts: 0, pairs: 0, flippedCards: [], matchedPairs: [] };
            updateMemoramaStats();
            
            const concepts = Object.keys(definitions).slice(0, 5);
            const cards = [];
            
            // Create concept cards
            concepts.forEach((concept, index) => {
                cards.push({ id: index * 2, type: 'concept', content: concept, pair: index });
                cards.push({ id: index * 2 + 1, type: 'definition', content: definitions[concept], pair: index });
            });
            
            // Shuffle cards
            for (let i = cards.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [cards[i], cards[j]] = [cards[j], cards[i]];
            }
            
            const board = document.getElementById('memorama-board');
            board.innerHTML = '';
            
            cards.forEach(card => {
                const cardElement = document.createElement('div');
                cardElement.className = 'memorama-card';
                cardElement.dataset.cardId = card.id;
                cardElement.dataset.pair = card.pair;
                cardElement.onclick = () => flipMemoramaCard(card.id);
                
                cardElement.innerHTML = `
                    <div class="memorama-card-inner">
                        <div class="memorama-card-front bg-purple-500 text-white font-bold">
                            <span class="text-2xl">üß†</span>
                        </div>
                        <div class="memorama-card-back bg-white border-2 border-purple-300 text-gray-800">
                            <span class="font-medium">${card.type === 'concept' ? card.content : card.content.substring(0, 50) + '...'}</span>
                        </div>
                    </div>
                `;
                
                board.appendChild(cardElement);
            });
        }

        function flipMemoramaCard(cardId) {
            const card = document.querySelector(`[data-card-id="${cardId}"]`);
            if (card.classList.contains('flipped') || memoramaState.flippedCards.length >= 2) return;
            
            card.classList.add('flipped');
            memoramaState.flippedCards.push(cardId);
            
            if (memoramaState.flippedCards.length === 2) {
                memoramaState.attempts++;
                updateMemoramaStats();
                
                setTimeout(() => {
                    checkMemoramaMatch();
                }, 1000);
            }
        }

        function checkMemoramaMatch() {
            const [card1Id, card2Id] = memoramaState.flippedCards;
            const card1 = document.querySelector(`[data-card-id="${card1Id}"]`);
            const card2 = document.querySelector(`[data-card-id="${card2Id}"]`);
            
            if (card1.dataset.pair === card2.dataset.pair) {
                // Match found
                memoramaState.pairs++;
                memoramaState.matchedPairs.push(card1.dataset.pair);
                card1.style.opacity = '0.7';
                card2.style.opacity = '0.7';
                
                if (memoramaState.pairs === 5) {
                    setTimeout(() => {
                        alert('¬°Felicidades! Has completado el memorama en ' + memoramaState.attempts + ' intentos.');
                    }, 500);
                }
            } else {
                // No match
                card1.classList.remove('flipped');
                card2.classList.remove('flipped');
            }
            
            memoramaState.flippedCards = [];
            updateMemoramaStats();
        }

        function updateMemoramaStats() {
            document.getElementById('memorama-attempts').textContent = memoramaState.attempts;
            document.getElementById('memorama-pairs').textContent = memoramaState.pairs;
        }

        function resetMemorama() {
            initMemorama();
        }

        // MATCHING GAME
        function initMatching() {
            matchingState = { score: 0, matches: {} };
            updateMatchingScore();
            
            const concepts = Object.keys(definitions);
            const conceptsList = document.getElementById('concepts-list');
            const definitionsList = document.getElementById('definitions-list');
            
            conceptsList.innerHTML = '';
            definitionsList.innerHTML = '';
            
            // Shuffle definitions for difficulty
            const shuffledDefinitions = [...Object.values(definitions)].sort(() => Math.random() - 0.5);
            
            concepts.forEach((concept, index) => {
                const conceptElement = document.createElement('div');
                conceptElement.className = 'draggable bg-blue-100 text-blue-800 p-3 rounded-lg font-medium cursor-grab';
                conceptElement.draggable = true;
                conceptElement.dataset.concept = concept;
                conceptElement.textContent = concept;
                conceptElement.ondragstart = (e) => handleDragStart(e);
                conceptsList.appendChild(conceptElement);
            });
            
            shuffledDefinitions.forEach((definition, index) => {
                const definitionElement = document.createElement('div');
                definitionElement.className = 'drop-zone p-3 rounded-lg bg-gray-50 text-sm';
                definitionElement.dataset.definition = definition;
                definitionElement.innerHTML = `<p class="text-gray-700">${definition}</p>`;
                definitionElement.ondragover = (e) => handleDragOver(e);
                definitionElement.ondrop = (e) => handleDrop(e);
                definitionsList.appendChild(definitionElement);
            });
        }

        function handleDragStart(e) {
            e.dataTransfer.setData('text/plain', e.target.dataset.concept);
            e.target.classList.add('dragging');
        }

        function handleDragOver(e) {
            e.preventDefault();
            e.target.closest('.drop-zone').classList.add('drag-over');
        }

        function handleDrop(e) {
            e.preventDefault();
            const dropZone = e.target.closest('.drop-zone');
            dropZone.classList.remove('drag-over');
            
            const concept = e.dataTransfer.getData('text/plain');
            const definition = dropZone.dataset.definition;
            
            if (definitions[concept] === definition) {
                dropZone.classList.add('correct');
                dropZone.innerHTML = `<p class="text-green-700 font-medium">‚úÖ ${concept}</p><p class="text-gray-600 text-sm mt-1">${definition}</p>`;
                matchingState.score++;
                matchingState.matches[concept] = definition;
                
                // Remove the dragged concept
                const conceptElement = document.querySelector(`[data-concept="${concept}"]`);
                conceptElement.remove();
                
                updateMatchingScore();
                
                if (matchingState.score === 10) {
                    setTimeout(() => {
                        alert('¬°Excelente! Has relacionado todos los conceptos correctamente.');
                    }, 500);
                }
            } else {
                // Wrong match - show feedback
                dropZone.style.backgroundColor = '#fee2e2';
                setTimeout(() => {
                    dropZone.style.backgroundColor = '';
                }, 1000);
            }
            
            // Remove dragging class
            document.querySelectorAll('.dragging').forEach(el => el.classList.remove('dragging'));
        }

        function updateMatchingScore() {
            document.getElementById('matching-score').textContent = matchingState.score;
        }

        function resetMatching() {
            initMatching();
        }

        // QUIZ GAME
        function initQuiz() {
            quizState = { currentQuestion: 0, score: 0, questions: generateQuizQuestions() };
            document.getElementById('quiz-container').classList.remove('hidden');
            document.getElementById('quiz-results').classList.add('hidden');
            loadQuizQuestion();
        }

        function generateQuizQuestions() {
            const concepts = Object.keys(definitions);
            const questions = [];
            
            concepts.forEach(concept => {
                const correctAnswer = definitions[concept];
                const wrongAnswers = Object.values(definitions).filter(def => def !== correctAnswer).slice(0, 3);
                const options = [correctAnswer, ...wrongAnswers].sort(() => Math.random() - 0.5);
                
                questions.push({
                    question: `¬øCu√°l es la definici√≥n correcta de "${concept}"?`,
                    options: options,
                    correct: correctAnswer
                });
            });
            
            return questions.sort(() => Math.random() - 0.5);
        }

        function loadQuizQuestion() {
            const question = quizState.questions[quizState.currentQuestion];
            document.getElementById('quiz-current').textContent = quizState.currentQuestion + 1;
            document.getElementById('quiz-score').textContent = quizState.score;
            
            document.getElementById('quiz-question').innerHTML = `
                <h4 class="text-lg font-bold text-gray-800 mb-4">Pregunta ${quizState.currentQuestion + 1}</h4>
                <p class="text-gray-700">${question.question}</p>
            `;
            
            const optionsContainer = document.getElementById('quiz-options');
            optionsContainer.innerHTML = '';
            
            question.options.forEach((option, index) => {
                const optionElement = document.createElement('button');
                optionElement.className = 'quiz-option w-full text-left p-4 bg-gray-50 hover:bg-blue-50 rounded-lg border border-gray-200 transition-all';
                optionElement.innerHTML = `<span class="font-medium text-blue-600">${String.fromCharCode(65 + index)})</span> ${option}`;
                optionElement.onclick = () => selectQuizAnswer(option, optionElement);
                optionsContainer.appendChild(optionElement);
            });
            
            document.getElementById('quiz-next').disabled = true;
        }

        function selectQuizAnswer(selectedAnswer, element) {
            const question = quizState.questions[quizState.currentQuestion];
            const options = document.querySelectorAll('.quiz-option');
            
            options.forEach(option => {
                option.disabled = true;
                option.classList.remove('hover:bg-blue-50');
                
                if (option.textContent.includes(question.correct)) {
                    option.classList.add('bg-green-100', 'border-green-500', 'text-green-800');
                } else if (option === element && selectedAnswer !== question.correct) {
                    option.classList.add('bg-red-100', 'border-red-500', 'text-red-800');
                }
            });
            
            if (selectedAnswer === question.correct) {
                quizState.score += 10;
            }
            
            document.getElementById('quiz-next').disabled = false;
        }

        function nextQuestion() {
            quizState.currentQuestion++;
            
            if (quizState.currentQuestion >= quizState.questions.length) {
                showQuizResults();
            } else {
                loadQuizQuestion();
            }
        }

        function showQuizResults() {
            document.getElementById('quiz-container').classList.add('hidden');
            document.getElementById('quiz-results').classList.remove('hidden');
            document.getElementById('final-score').textContent = quizState.score;
        }

        function resetQuiz() {
            initQuiz();
        }

        // FLASHCARDS GAME
        function initFlashcards() {
            flashcardState = { currentCard: 0 };
            const concepts = Object.keys(definitions);
            flashcardState.cards = concepts.map(concept => ({
                concept: concept,
                definition: definitions[concept]
            }));
            loadFlashcard();
        }

        function loadFlashcard() {
            const card = flashcardState.cards[flashcardState.currentCard];
            document.getElementById('flashcard-current').textContent = flashcardState.currentCard + 1;
            
            document.getElementById('flashcard-front').innerHTML = `
                <h4 class="text-2xl font-bold mb-4">${card.concept}</h4>
                <p class="text-sm opacity-75">Haz clic para ver la definici√≥n</p>
            `;
            
            document.getElementById('flashcard-back').innerHTML = `
                <p class="text-sm leading-relaxed">${card.definition}</p>
                <p class="text-xs opacity-75 mt-4">Haz clic para volver al concepto</p>
            `;
            
            // Reset card to front
            document.getElementById('flashcard-front').classList.remove('hidden');
            document.getElementById('flashcard-back').classList.add('hidden');
        }

        function flipCard() {
            const front = document.getElementById('flashcard-front');
            const back = document.getElementById('flashcard-back');
            
            if (front.classList.contains('hidden')) {
                front.classList.remove('hidden');
                back.classList.add('hidden');
            } else {
                front.classList.add('hidden');
                back.classList.remove('hidden');
            }
        }

        function nextCard() {
            flashcardState.currentCard = (flashcardState.currentCard + 1) % flashcardState.cards.length;
            loadFlashcard();
        }

        function previousCard() {
            flashcardState.currentCard = flashcardState.currentCard === 0 ? flashcardState.cards.length - 1 : flashcardState.currentCard - 1;
            loadFlashcard();
        }

        // Event listeners
        document.addEventListener('click', function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        });

        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                const activeModal = document.querySelector('.modal.active');
                if (activeModal) {
                    activeModal.classList.remove('active');
                    document.body.style.overflow = 'auto';
                }
            }
        });

        // Initialize first game on page load
        document.addEventListener('DOMContentLoaded', function() {
            showGame('memorama');
        });
    </script>
